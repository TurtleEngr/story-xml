<!ELEMENT unit (title, outline?, thread+)>
<!ATTLIST unit
	%req-com-attr;
	type (scene|sequel) #REQUIRED
>

<!ELEMENT outline (when?, where?, who*, description?)>

<!ELEMENT when (start-date, duration?, end-date?, description?)>
<!ELEMENT start-date (#PCDATA)>	<!-- yyyy-mm-dd(Thh:mmZ(-)nnn) -->
<!ATTLIST start-date
	%date-time;
	gmt CDATA #IMPLIED
>
<!ELEMENT duration  (#PCDATA)>	<!-- PyyyyYmmMddD(ThhHmmM) ex: P0Y0M0DT2H5M -->
<!ATTLIST duration
	%date-time;
>
<!ELEMENT end-date (#PCDATA)>	<!-- yyyy-mm-dd(Thh:mmZ(-)nnn) -->
<!ATTLIST end-date
	%date-time;
	gmt CDATA #IMPLIED
>
<!--
If duration is missing, calc duration from end-date.
If both duration and end-date are present, use duration (ignore end-date)
   (time fix routine: update end-date)
If both duration and end-date are missing see def-when attr. for def. duration
If attr are missing from start-date, see def-when.
If attr are missing from end-date, get them from start-date.
If attr are missing from duration, see def-when d-* attr. defaults
-->

<!ELEMENT where %simple-text;>
<!ATTLIST where
	%ref-r;
>
<!-- ref - defwhere-id -->

<!ELEMENT who %simple-text;>
<!ATTLIST who
	%ref-r;
>
<!-- ref - defwho-id -->

<!ELEMENT description (%simple-text;)>

<!ELEMENT thread %thread-text;>
<!ATTLIST thread
	%com-attr;
	ref CDATA #REQUIRED
	who-refs CDATA #REQUIRED
>
<!--
refs - one or more def-thread-id's separated by spaces
who-refs - print only the t tags that have these "who" ids
-->
