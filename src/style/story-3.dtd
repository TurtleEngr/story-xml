<!-- ******************* -->
<!-- Common Attr -->

<!ENTITY % id "id CDATA #REQUIRED">
<!ENTITY % ref-i "ref CDATA #IMPLIED">
<!ENTITY % ref-r "ref CDATA #REQUIRED">
<!ENTITY % bool "1|0">

<!ENTITY % com-attr "
condition CDATA #IMPLIED
id CDATA #IMPLIED
lang CDATA #IMPLIED
revision (in-progress|draft|final) #IMPLIED
revision-flag (changed|added|deleted|off) #IMPLIED
">

<!ENTITY % req-com-attr "
condition CDATA #IMPLIED
id CDATA #REQUIRED
lang CDATA #IMPLIED
revision (in-progress|draft|final) #REQUIRED
revision-flag (changed|added|deleted|off) #IMPLIED
">

<!ENTITY % date-time "
year CDATA #IMPLIED
month CDATA #IMPLIED
day CDATA #IMPLIED
hour CDATA #IMPLIED
min CDATA #IMPLIED
">
<!--
year - any integer
month - 1-12
day - 1-31
hour - 0-23
min - 0-59
gmt - -NNNN or NNNN (GMT-8 = -0800)
-->

<!ENTITY % font-family "helvetica|courier|times">
<!--
lulu fonts: 
	Arial (sans)
	Book Antiqua
	Bookman Old Style (serif)
	Century (serif)
	Courier (monospace)
	Garamond
	Palatino (serif)
	Tahoma
	Times New Roman (serif)
	Verdana
	Symbols 
Internal use:
	Helvetica, Arial, sans
	Courier, monospace
	Times, "Times New Roman", serif
-->
<!ENTITY % font-size "8pt|9pt|10pt|11pt|12pt|13pt|14pt|15pt|16pt|17pt|18pt|19pt|20pt|21pt|22pt|23pt|24pt|25pt">

