<!ELEMENT epilog (%com-title;, %simple-text;)>

<!ELEMENT ch-preface (title, %simple-text;)>

<!-- ****************** -->
<!ELEMENT chapter (%com-title;, chapter-info, prolog?, unit+, postlog?)>
<!ATTLIST chapter
	%req-com-attr;
>

<!ELEMENT chapter-info (%com-info;)>

<!ELEMENT prolog (title, %simple-text;)>
